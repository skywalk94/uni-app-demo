{
	"pages": [{
		"path": "pages/index",
		"style": {
			"enablePullDownRefresh": true,
			"pullToRefresh": {
				"support": true,
				"color": "#2c76ff"
			}
		}
	}, {
		"path": "pages/detail",
		"style": {
			"navigationBarTitleText": "详情",
			"app-plus": {
				"titleNView": {
					"type": "transparent"
				}
			}
		}
	}, {
		"path": "pages/mine",
		"style": {
			"navigationBarTitleText": "个人中心"
		}
	}],
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
